{
  "name": "react-native-modern-video-player",
  "version": "0.2.2",
  "description": "simple video player for react native based on react-native-video",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-modern-video-player.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/abuelwafa/react-native-modern-video-player",
  "author": "Mohamed Ali Abuelwafa <mohamed.abuelwafa@gmail.com> (https://github.com/abuelwafa)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abuelwafa/react-native-modern-video-player/issues"
  },
  "homepage": "https://github.com/abuelwafa/react-native-modern-video-player#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.16.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/jest": "^26.0.16",
    "@types/react": "^17.0.0",
    "@types/react-native": "0.63.37",
    "@types/react-native-video": "^5.0.3",
    "commitlint": "^8.3.5",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "pod-install": "^0.1.13",
    "prettier": "^2.2.1",
    "react": "16.11.0",
    "react-native": "0.62.2",
    "react-native-orientation-locker": "^1.2.0",
    "react-native-svg": "^12.1.0",
    "react-native-video": "^5.1.0-alpha8",
    "release-it": "^13.5.8",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-orientation-locker": "*",
    "react-native-svg": "*",
    "react-native-video": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": true,
          "tabWidth": 4,
          "printWidth": 100,
          "bracketSpacing": true,
          "jsxBracketSameLine": true,
          "singleQuote": true,
          "trailingComma": "all",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "printWidth": 100,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
