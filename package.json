{
  "name": "react-native-modern-video-player",
  "version": "0.4.0",
  "description": "simple video player for react native based on react-native-video",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "react-native-modern-video-player.podspec",
    "!lib/typescript/example"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/abuelwafa/react-native-modern-video-player",
  "author": "Mohamed Ali Abuelwafa <mohamed.abuelwafa@gmail.com> (https://github.com/abuelwafa)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abuelwafa/react-native-modern-video-player/issues"
  },
  "homepage": "https://github.com/abuelwafa/react-native-modern-video-player#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.16",
    "@types/react": "^17.0.0",
    "@types/react-native": "0.63.50",
    "@types/react-native-video": "^5.0.3",
    "commitlint": "^11.0.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "5",
    "jest": "^26.6.3",
    "pinst": "^2.1.4",
    "pod-install": "^0.1.13",
    "prettier": "^2.2.1",
    "react": "16.11.0",
    "react-native": "0.62.2",
    "react-native-builder-bob": "^0.17.1",
    "react-native-orientation-locker": "^1.2.0",
    "react-native-svg": "^12.1.0",
    "react-native-video": "^5.1.0-alpha8",
    "release-it": "^14.4.1",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-orientation-locker": "*",
    "react-native-svg": "*",
    "react-native-video": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": true,
          "tabWidth": 4,
          "printWidth": 100,
          "bracketSpacing": true,
          "jsxBracketSameLine": true,
          "singleQuote": true,
          "trailingComma": "all",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
